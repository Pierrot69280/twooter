{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        {{ form_errors(registrationForm) }}
        <h1 class="h3 mb-3 font-weight-normal mt-3">Register</h1>


        <form method="post">
            {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_row(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Your name'}}) }}
            </div>
            <div class="form-group mt-3">
                {{ form_row(registrationForm.plainPassword, {
                    'label': false,
                    'attr': {'class': 'form-control', 'placeholder': 'Your Password'}
                }) }}
            </div>
            <div class="mt-3 form-group form-check">
                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}"></label>
            </div>
            <button type="submit" class="btn btn-vert text-white mt-3">Register</button>
            {{ form_end(registrationForm) }}
        </form>
    </div>

    </div>
{% endblock %}
