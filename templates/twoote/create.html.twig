{% extends 'base.html.twig' %}
{% form_theme formulaire 'bootstrap_5_layout.html.twig' %}
{% block title %}Twooter{% endblock %}


{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">{{ retwoot ? 'Écrit ton Re-twoote :' : 'Écrit ton twoote'  }}</div>
                    <div class="card-body">
                        {{ form_start(formulaire, {'attr': {'class': 'form', 'enctype': 'multipart/form-data'}}) }}

                        <div class="mb-3">
                            {{ form_label(formulaire.content, 'Contenu', {'label_attr': {'class': 'form-label required'}}) }}
                            {{ form_widget(formulaire.content, {'attr': {'class': 'form-control', 'placeholder': 'Your text goes here, also you can optionally upload an image'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(formulaire.category, 'Category', {'label_attr': {'class': 'form-label required'}}) }}
                            {{ form_widget(formulaire.category, {'attr': {'class': 'form-control', 'placeholder': 'Your text goes here, also you can optionally upload an image'}}) }}
                        </div>

                        <button type="submit" class="btn btn-success">{{ retwoot ? 'retwoot' : 'twoot' }}</button>
                        {{ form_end(formulaire) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
