    <div class="card">
        <div class="card-body px-0">
            <h5 class="mt-3 card-title text-center"><a class="text-decoration-none text-dark" href="{{ path("app_twoote",{id:twoote.id}) }}">{{ twoote.content }}</a></h5>
            <div class="container mt-3">
                {% include 'image/image_or_not_image.html.twig' with {object:twoote} %}
            </div>


            <div class="mt-3 text-center">
                {% for category in twoote.category %}
                    <a class="card-text text-center text-primary text-decoration-none" href="{{ path("app_twoote", {id:twoote.id}) }}"> <b>#{{ category.name }}</b>{% if not loop.last %}, {% endif %}</a>
                {% endfor %}
            </div>
        </div>

        <div class="bg-orange d-flex justify-content-between">
            {% if twoote.retwoot %}
                <div class="m-3 text-white">
                    <a href="{{ path('app_profil', {'id': twoote.author.id}) }}" class="text-white text-decoration-none">
                        <i class="">Re-twoot√© par :</i> @{{ twoote.author.username}}
                    </a>
                </div>
            {% else %}
                <div class="m-3 text-white">
                    <a href="{{ path('app_profil', {'id': twoote.author.id}) }}" class="text-white text-decoration-none">
                        @{{ twoote.author.username}}
                    </a>
                </div>                                {% endif %}
            <div class="m-3 text-white">{{ twoote.createdAt|date("d/m/Y H:i") }}</div>
        </div>


        {% if twoote.retwoot %}
            <div class="card-body mt-3">
                <div class="card bg-light mb-3">
                    <div class="card-body px-0">
                        <div class="text-center mt-3">
                            <h5>{{ twoote.retwoot.content }}</h5>
                            <div class="mt-3 text-center">
                                {% for category in twoote.retwoot.category %}
                                <a class="card-text text-primary text-decoration-none" href="{{ path("app_twoote", {id:twoote.id}) }}"> <b>{{ category.name }}</b></a>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="container mt-3">
                            {% include 'image/image_or_not_image.html.twig' with {object:twoote.retwoot} %}
                        </div>
                        <div class="mt-3 bg-orange d-flex justify-content-between">
                            <a href="{{ path('app_profil',{'id': twoote.retwoot.author.id} ) }}" class="m-3 text-white text-decoration-none">@{{ twoote.retwoot.author.username}}</a>
                            <div class="m-3 text-white">{{ twoote.retwoot.createdAt|date("d/m/Y H:i") }}</div>
                        </div>
                        <div class="card-body d-flex justify-content-between">
                            <h3><a href="{{ path("app_retwoote", {id:twoote.retwoot.id}) }}"><i class="bi-megaphone text-orange"></i></a></h3>
                            <h3><a href="{{ path("app_twoote", {id:twoote.retwoot.id}) }}"><i class="bi bi-envelope text-orange"></i></a></h3>
                            <div class="d-flex justify-content-end">
                                {% include 'like/button.html.twig' with { routeName:"app_like", object:twoote.retwoot } %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="card-body d-flex justify-content-between">
            <h3><a href="{{ path("app_retwoote", {id:twoote.id}) }}"><i class="bi-megaphone text-orange"></i></a></h3>
            <h3><a href="{{ path("app_twoote", {id:twoote.id}) }}"><i class="bi bi-envelope text-orange"></i></a></h3>
            <div class="d-flex justify-content-end">
                {% include 'like/button.html.twig' with { routeName:"app_like", object:twoote } %}
            </div>
        </div>
    </div>

