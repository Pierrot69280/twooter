{% extends 'base.html.twig' %}

{% block title %}Les Twootes{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container mt-5">
            <div class="row justify-content-center">
                {% for twoote in twootes|reverse %}
                <div class="col-10 mb-3">
                {% include 'twoote/card.html.twig' with {object:twoote} %}
                </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <h1 class="text-center mt-5">Bienvenue sur Twoot-twoot! ✅</h1>
        <h3 class="mt-2 text-center">Veuillez vous connecter ou créer un compte...</h3>
    {% endif %}


    <script src="{{ asset('like.js') }}"></script>


{% endblock %}
