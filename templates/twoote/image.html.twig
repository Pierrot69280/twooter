{% extends 'base.html.twig' %}

{% form_theme formImage 'bootstrap_5_layout.html.twig' %}

{% block title %}Ajouter Image{% endblock %}


{% block body %}


    {% include 'image/image_or_not_image.html.twig' with {object:twoote} %}

    <div class="container">
        <h3>Ajouter une image</h3>

        {{ form_start(formImage, {attr:{action:path('add_twoote_image', {id:twoote.id})}}) }}
        {{ form_row(formImage.imageFile) }}
        <button type="submit" class="btn btn-success">Ajouter</button>
        {{ form_end(formImage) }}
        <a href="{{ path('app_twoote',{id: twoote.id}) }}" class="btn btn-secondary mt-3">Retour</a>
    </div>


{% endblock %}